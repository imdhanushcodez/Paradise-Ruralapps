<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/purbor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ko1"></ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/hebbo"
                android:text="Handmade-koodai-No.21"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="₹ ̶2̶4̶2̶"
                    android:textSize="13dp"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="₹145"
                    android:textColor="@color/black"
                    android:textSize="13dp"></TextView>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="27% off"
                    android:textColor="#73980b"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rating23"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/hebbo"
                    android:text="4.6 ratings"
                    android:textSize="13dp"></TextView>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:background="@drawable/agri11"
                android:layout_marginLeft="20dp"
                android:text="BUY NOW "
                android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/purbor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ka1"></ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/hebbo"
                android:text="wooden-rope cot - No.22"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="₹2̶4̶3̶2̶"
                    android:textSize="13dp"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="1045"
                    android:textColor="@color/black"
                    android:textSize="13dp"></TextView>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hebbo"
                    android:text="45% off"
                    android:textColor="#73980b"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rating23"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/hebbo"
                    android:text="4.7 ratings"
                    android:textSize="13dp"></TextView>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:background="@drawable/agri11"
                android:layout_marginLeft="20dp"
                android:text="BUY NOW "
                android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_width="407dp"
       android:layout_height="200dp">
       <HorizontalScrollView
           android:layout_width="407dp"
           android:layout_height="200dp">
           <LinearLayout
               android:layout_width="407dp"
               android:layout_height="200dp"
               android:orientation="horizontal">
               <androidx.appcompat.widget.AppCompatImageButton
                   android:layout_width="320dp"
                   android:layout_height="150dp"
                   android:background="@drawable/whatnews1"
                   android:elevation="10dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/whtnews1">
               </androidx.appcompat.widget.AppCompatImageButton>
               <androidx.appcompat.widget.AppCompatImageButton
                   android:layout_width="320dp"
                   android:layout_height="150dp"
                   android:background="@drawable/whatnews2"
                   android:elevation="10dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/whtnews2">
               </androidx.appcompat.widget.AppCompatImageButton>
               <androidx.appcompat.widget.AppCompatImageButton
                   android:layout_width="320dp"
                   android:layout_height="150dp"
                   android:background="@drawable/whatnews3"
                   android:elevation="10dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/whtnews3">
               </androidx.appcompat.widget.AppCompatImageButton>

           </LinearLayout>
       </HorizontalScrollView>
   </LinearLayout>

</LinearLayout>