<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fertilizer"
    android:orientation="vertical"
    android:background="#D6E3A8">
    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:elevation="20dp"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/la"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/existtips">
        </androidx.appcompat.widget.AppCompatImageButton>
        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="TIPS AND TRICKS"
            android:textColor="#73980b"
            android:textStyle="bold"
            android:fontFamily="@font/bruno"
            android:textSize="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="60dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="600dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <HorizontalScrollView
            android:layout_width="407dp"
            android:layout_height="600dp">
            <LinearLayout
                android:layout_width="407dp"
                android:layout_height="600dp"
                android:background="#D6E3A8">
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="600dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play in tamil"
                            android:textColor="@color/white"
                            android:layout_marginLeft="20dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play"
                            android:onClick="play"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="stop"
                            android:onClick="stop"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="550dp"
                        android:background="@drawable/to2"
                        android:layout_marginTop="00dp"
                        android:layout_marginLeft="10dp">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="600dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play in tamil"
                            android:textColor="@color/white"
                            android:layout_marginLeft="20dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play2"
                            android:onClick="play2"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="stop2"
                            android:onClick="stop2"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="550dp"
                        android:background="@drawable/to3"
                        android:layout_marginTop="00dp"
                        android:layout_marginLeft="10dp">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="600dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play in tamil"
                            android:textColor="@color/white"
                            android:layout_marginLeft="20dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="play3"
                            android:onClick="play3"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/agri11"
                            android:text="stop3"
                            android:onClick="stop3"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="550dp"
                        android:background="@drawable/to1"
                        android:layout_marginTop="00dp"
                        android:layout_marginLeft="10dp">
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                android:layout_width="50dp"
                android:layout_height="550dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">
            </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>