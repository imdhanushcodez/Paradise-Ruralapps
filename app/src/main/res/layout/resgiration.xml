<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/la"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/exist1">
    </androidx.appcompat.widget.AppCompatImageButton>

    <TextView
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:text="REGISTRATION"
        android:fontFamily="@font/bruno"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:textColor="#73980b">
    </TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="create your own account"
        android:layout_marginLeft="115dp"
        android:textStyle="italic">
    </TextView>
    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/editt"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="USERNAME"
        android:textSize="13dp"
        android:id="@+id/resu"
        android:textStyle="normal"
        android:fontFamily="@font/hebbo"
        android:textColor="#73980b"
        android:drawableStart="@drawable/acc"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp">
    </EditText>
    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/editt"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="EMAIL"
        android:textSize="13dp"
        android:textStyle="normal"
        android:fontFamily="@font/hebbo"
        android:textColor="#73980b"
        android:drawableStart="@drawable/email"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:id="@+id/regemail">
    </EditText>
    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/editt"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="PASSWORD"
        android:textSize="13dp"
        android:textStyle="normal"
        android:fontFamily="@font/hebbo"
        android:textColor="#73980b"
        android:drawableStart="@drawable/security"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:id="@+id/regpass">
    </EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/agri1"
        android:text="REGISTRATION"
        android:textColor="@color/white"
        android:id="@+id/reg">
    </androidx.appcompat.widget.AppCompatButton>
    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="37dp">
        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="or else with others"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="7dp">
        </TextView>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search"
            android:layout_marginLeft="100dp">
        </androidx.appcompat.widget.AppCompatImageButton>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/apple"
            android:layout_marginLeft="50dp">
        </androidx.appcompat.widget.AppCompatImageButton>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/facebook"
            android:layout_marginLeft="50dp">
        </androidx.appcompat.widget.AppCompatImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="already have account?">
        </TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="LOGIN "
            android:textSize="10dp"
            android:background="@drawable/agri1"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>